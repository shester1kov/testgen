# Server Configuration
PORT=8080
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=15432
DB_USER=testgen_user
DB_PASSWORD=testgen_password
DB_NAME=testgen_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=24h

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=./uploads

# LLM API Configuration (choose one or configure fallback)
LLM_PROVIDER=yandexgpt  # yandexgpt, perplexity, openai

# YandexGPT Configuration (Recommended for Russia)
YANDEX_GPT_API_KEY=your-yandex-api-key
YANDEX_GPT_FOLDER_ID=your-folder-id  # Example: b1galqo24otq9516qmas
YANDEX_GPT_MODEL=yandexgpt-lite  # yandexgpt-lite (cheaper) or yandexgpt (more powerful)

# Other LLM Providers (optional, requires VPN in Russia)
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENAI_API_KEY=your-openai-api-key

# Moodle Integration
MOODLE_URL=https://moodle.example.com
MOODLE_TOKEN=your-moodle-webservice-token

# Monitoring
ENABLE_METRICS=true

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

YANDEX_GPT_API_KEY=ваш-реальный-ключ
YANDEX_GPT_FOLDER_ID=ваш-folder-id