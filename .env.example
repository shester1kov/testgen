# Server Configuration
PORT=8080
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=testgen_user
DB_PASSWORD=testgen_password
DB_NAME=testgen_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=24h

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=./uploads

# LLM API Configuration (choose one or configure fallback)
LLM_PROVIDER=perplexity  # perplexity, openai, yandex
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENAI_API_KEY=your-openai-api-key
YANDEX_GPT_API_KEY=your-yandex-gpt-api-key

# Moodle Integration
MOODLE_URL=https://moodle.example.com
MOODLE_TOKEN=your-moodle-webservice-token

# Monitoring
ENABLE_METRICS=true

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
