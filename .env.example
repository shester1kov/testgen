# Server Configuration
PORT=8080
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=15432
DB_USER=testgen_user
DB_PASSWORD=testgen_password
DB_NAME=testgen_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=24h

# Cookie Configuration
COOKIE_NAME=testgen_token
COOKIE_DOMAIN=
COOKIE_PATH=/
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=Lax

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=./uploads

# LLM API Configuration (choose one or configure fallback)
LLM_PROVIDER=yandex  # perplexity, openai, yandex
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENAI_API_KEY=your-openai-api-key

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_MAX_FILE_SIZE=52428800
VITE_SUPPORTED_FORMATS=pdf,docx,pptx,txt

# Moodle Integration
MOODLE_URL=http://localhost:8081
MOODLE_TOKEN=your-moodle-web-service-token
MOODLE_IMPORT_TOKEN=testgen_secret_token_change_in_production

# Moodle Database Configuration
MOODLE_DB_HOST=moodle_db
MOODLE_DB_PORT=25432
MOODLE_DB_USER=moodle_user
MOODLE_DB_PASSWORD=moodle_password
MOODLE_DB_NAME=moodle_db
MOODLE_DB_TYPE=pgsql
MOODLE_WWWROOT=http://localhost:8081
MOODLE_DATAROOT=/var/www/moodledata
MOODLE_WEB_PORT=8081

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # console (dev) or json (production)

# Monitoring
ENABLE_METRICS=true

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=admin123
GF_USERS_ALLOW_SIGN_UP=false

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# YandexGPT Configuration
YANDEX_GPT_API_KEY=your-yandex-gpt-api-key
YANDEX_GPT_FOLDER_ID=your-folder-id
YANDEX_GPT_MODEL=yandexgpt-lite
